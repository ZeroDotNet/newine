#!/bin/bash
#Set the root password as root if not set as an ENV variable
export PASSWD=${PASSWD:=root}
#Set the root password
echo "root:$PASSWD" | chpasswd
#Spawn dropbear
dropbear -E -F &

chmod a+rw /dev/i2c-0
daemon --chdir=/app --output=/app/thin.log -- /usr/bin/ruby run.rb
daemon --respawn --chdir=/app --output=/app/nfc.log -- /usr/bin/rake nfc:work


while true; do sleep 1; done
