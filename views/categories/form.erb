<div class="form-group">
	<label for='category[name]' class='col-lg-3 control-label'>Nombre:</label>
	<div class='col-lg-6'>
			<input type='text' name='category[name]' class='form-control' value='<%= category.name %>' required>
		</div>
	</div>
	<div class="form-group">
	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje low:</label>
	<div class='col-lg-6'>
		<div class="input-group">
	    <input type='number' name='category[low_percentage]' min="1" max="100" class='form-control category-low' value='<%= category.low_percentage %>' required>
	    <div class="input-group-addon">%</div>
	  </div>		
	</div>
	</div>
	<div class="form-group">
	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje med:</label>
	<div class='col-lg-6'>
		<div class="input-group">
      <input type='number' name='category[med_percentage]' min="1" max="100" class='form-control category-med' value='<%= category.med_percentage %>' required>
      <div class="input-group-addon">%</div>
    </div>
	</div>
	</div>
	<div class="form-group">
	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje high:</label>
		<div class='col-lg-6'>
			<div class="input-group">
	      <input type='number' name='category[]' min="1" max="100" class='form-control category-high' value='<%= category.high_percentage %>' required>
	      <div class="input-group-addon">%</div>
	    </div>
		</div>
	</div>