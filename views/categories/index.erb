
<script src='/assets/js/newine.js'></script>
<script src='/assets/js/categories_index.js'></script>
<div class='container'>
	<div class='row'>
		<div class='col-lg-12'>
			<h2 class='centered'>Categorías</h2>
			<div class='row' style='padding-bottom:10px;'>
				<div class='col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1'>
					<form class='form-search form-inline' action='/categories' method='get'>
						<div class='col-lg-10 col-xs-10'>
							<input type='search' name='q' class='form-control input-sm' value=<%= params[:q]%>>
						</div>
						<div class='col-lg-2 col-xs-2'>
							<button class='btn btn-search'>Buscar</button>
						</div>
					</form>
				</div>
				<button type="button" class="btn btn-success" data-toggle="modal" data-target="#createCategory">Crear Categoría</button>
			</div>
			
		</div>
	</div>
	<div class='row'>
		<div class='col-lg-12'>
			<div class='row'>
				<div class='col-lg-10 col-lg-offset-1 apple_pagination'>
					<%= will_paginate @categories %>
				</div>
			</div>
			<div class='row'>
				<div class='col-lg-6 col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-0'>
					<div class='col-lg-12'>
						<div id='category_container'>
						<% @categories.each do |category| %>
							<div class='row'>
								<div class='col-lg-12'>
									<div class='panel panel-default panel-link category-link' data-id=<%= category.id.to_s %>>
										<div class='panel-body'>
												<img src='/assets/img/user-icon.png' width=40 height=40 />
												<span style="padding-left:10px;">									
													<strong><%= category.id %>:</strong> <%= category.name %>										
												</span>						
										</div>
									</div>
								</div>
							</div>
						<% end %>
						</div>
					</div>
				</div>
				<div class='col-lg-6 col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-0'>
					<div class='col-xs-12'>
						<% @categories.each do |category| %>
							<div class='row category-data hidden' data-category-id=<%= category.id.to_s %>>
								<div class='col-xs-12'>
									<div class='panel panel-default' style='min-height: 300px;'>
										<div class='panel-body'>
												<span style="padding-left:10px;">									
													<strong><%= category.id %>:</strong> <%= category.name %>
													<a class='edit_category btn btn-warning pull-right' data-category-id=<%= category.id.to_s %>>Editar</a>
												</span>
												<hr />
												<div class='category_info' data-category-id=<%= category.id.to_s %>>
													<p style="padding-left:10px;">									
														<strong>Nombre:</strong> <%= category.name %>
													</p>
													<br />
													<p style="padding-left:10px;">									
														<strong>Descuento low:</strong> <%= "#{category.low_percentage}%" %>
													</p>
													<br />
													<p style="padding-left:10px;">									
														<strong>Descuento med:</strong> <%= "#{category.med_percentage}%" %>
													</p>
													<br />
													<p style="padding-left:10px;">									
														<strong>Descuento high:</strong> <%= "#{category.high_percentage}%" %>
													</p>
													<br />
												</div>
												<form style='padding-bottom:20px;' class='form-horizontal category_edit_form hidden' data-category-id=<%= category.id.to_s %> action='/category/update/<%= category.id.to_s %>' method='post'>
													<div class="form-group">
							            	<label for='category[name]' class='col-lg-3 control-label'>Nombre:</label>
							            	<div class='col-lg-6'>
						           				<input type='text' name='category[name]' class='form-control' value='<%= category.name %>'>
							           		</div>
							           	</div>
							           	<div class="form-group">
							            	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje low:</label>
							            	<div class='col-lg-6'>
						           				<input type='number' name='category[low_percentage]' min="1" max="100" class='form-control' value='<%= category.low_percentage %>'>
							           		</div>
							           	</div>
							           	<div class="form-group">
							            	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje med:</label>
							            	<div class='col-lg-6'>
						           				<input type='number' name='category[med_percentage]' min="1" max="100" class='form-control' value='<%= category.med_percentage %>'>
							           		</div>
							           	</div>
							           	<div class="form-group">
							            	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje high:</label>
							            	<div class='col-lg-6'>
						           				<input type='number' name='category[high_percentage]' min="1" max="100" class='form-control' value='<%= category.high_percentage %>'>
							           		</div>
							           	</div>
													<div class='col-lg-offset-3'>
														<button class='btn btn-primary'>Guardar</button>
														<a class='btn btn-default cancel_edit'>Cancelar</a>
													</div>
												</form>
											</div>
										</div>
									</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</div>

<div class="modal fade" id="createCategory">
	<div class="modal-dialog">
		<div class="modal-content">
			<form action='/category/save' method='post' class='form-horizontal'>
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title">Nueva Categoría</h4>
				</div>
				<div class="modal-body">
					<div class='row'>
						<div class='col-lg-12'>
							<div class="form-group">
	            	<label for='category[name]' class='col-lg-3 control-label'>Nombre:</label>
	            	<div class='col-lg-6'>
           				<input type='text' name='category[name]' class='form-control'>
	           		</div>
	           	</div>
	           	<div class="form-group">
	            	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje low:</label>
	            	<div class='col-lg-6'>
           				<input type='number' name='category[low_percentage]' min="1" max="100" class='form-control'>
	           		</div>
	           	</div>
	           	<div class="form-group">
	            	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje med:</label>
	            	<div class='col-lg-6'>
           				<input type='number' name='category[med_percentage]' min="1" max="100" class='form-control'>
	           		</div>
	           	</div>
	           	<div class="form-group">
	            	<label for='category[percentage]' class='col-lg-3 control-label'>Porcentaje high:</label>
	            	<div class='col-lg-6'>
           				<input type='number' name='category[high_percentage]' min="1" max="100" class='form-control'>
	           		</div>
	           	</div>
	          </div>
	        </div>
	      </div>		
				<div class='modal-footer'>
					<a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
          <button class='btn btn-primary'>Crear</button>
				</div>
			</form>
		</div>
	</div>
</div>

