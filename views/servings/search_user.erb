<script src='/assets/js/search_user.js'></script>
<br>
<div class="panel">
	<form method="get" action="<%= url('/servings/users')%>" class="form-horizontal">
		<div class="col-md-6">
			<div class="form-group">
				<label class="col-sm-3">Nombre o Apellido</label>
				<div class="col-sm-9">
					<select id="user-search" class="form-control" name="q[user_id_eq]">
						<option><%= User.find(@q.user_id_eq) if @q.user_id_eq %></option> 
					</select>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label class="col-sm-3">Categor√≠a</label>
				<div class="col-sm-9">
					<select class="form-control" name="q[user_category_id_eq]">
						<option value=""></option>
						<% Category.all.each do |category| %>
							<option value="<%= category.id %>" <%= "selected" if category.id == @q.user_category_id_eq%>><%= category.name %></option>
						<% end %>
					</select>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-12">
				<div class="pull-right">
					<a href="<%= url('/servings/users')%>" class="btn btn-warning">Limpiar</a>
					<button type="submit" class="btn btn-default">Buscar</button>
				</div>
			</div>
		</div>		
	</form>
</div>
