<br>
<div class="panel">
	<form method="get" action="<%= url('/servings')%>" class="form-horizontal">
		<div class="col-sm-6">
			<div class="form-group">
				<label class="col-sm-2">Vino</label>
				<div class="col-sm-10">
					<select class="form-control" name="q[wine_id_eq]">
						<% Wine.all.each do |wine| %>
							<option value="<%= wine.id%>" <%=  "selected" if @q.wine_id_eq == wine.id %>><%= wine%></option>
						<% end %>
					</select>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-12">
				<div class="pull-right">
					<a href="<%= url('/servings')%>" class="btn btn-warning">Limpiar</a>
					<button type="submit" class="btn btn-default">Buscar</button>
				</div>
			</div>
		</div>		
	</form>
</div>