<div class="modal fade" id="new-dispenser-modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<form action='/dispensers' method='post' class='form-horizontal'>
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title">Nuevo Dispenser</h4>
				</div>
				<div class="modal-body">
					<div class='row'>
						<div class='col-lg-12'>
							<div class="form-group">
	            	<label for='dispenser[uid]' class='col-lg-3 control-label'>Nro. de Serie</label>
	            	<div class='col-lg-9'>
	            		<input type='text' name='dispenser[uid]' class='form-control' required>
	            	</div>
				      </div>
				      <div class="form-group">
	            	<label for='dispenser[name]' class='col-lg-3 control-label'>Nombre del dispenser</label>
	            	<div class='col-lg-9'>
	            		<input type='text' name='dispenser[name]' class='form-control' required>
	            	</div>
				      </div>
				      <input type="hidden" name="dispenser[n_temperature_controls]">
							<div class="form-group">
						    <div class="col-sm-offset-3 col-sm-9">
						      <div class="checkbox">
						        <label>
						          <input type="checkbox" name="dispenser[complementary_drink]"> Copa de cortesía
						        </label>
						      </div>
						    </div>
						  </div>
						</div>
					</div>
				</div>
				<div class='modal-footer'>
					<a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
          			<button class='btn btn-primary'>Crear</button>
				</div>
			</form>
		</div>
	</div>
</div>
