<script type="text/template" id='dispensers-template'>
	<div class='row'>
		<div class='col-lg-10 col-offset-2'>
			<a href="/dispensers/id/{{id}}" class=''>
				<div class='panel panel-default panel-link'>
					<div class='panel-body'>
						
							<img src='/assets/img/dispenser-icon.png' width=50 height=50 />
						
							<span style="padding-left:10px;">									
								<strong>{{id}}:</strong> {{uid}}										
							</span>						
					</div>
				</div>
			</a>
		</div>
	</div>
</script>
<script type="text/template" id='events-template'>
	<div class='row' style={{&style}}>
		<div class='col-lg-12 panel-link' style="border-bottom: 1px #999 solid; margin-top: 4px; margin-left: 4px;">
			<a href={{link_url}} class=''>
				<div>								
					<p>{{timestamp}}: <strong>{{title}}</strong> - {{description}}</p>														
				</div>
			</a>
			
		</div>
	</div>
</script>
<script src='/assets/js/newine.js'></script>
<script src='/assets/js/index.js'></script>
<div class='container'>
	<div class='row'>
		<div class='col-lg-2'>

		</div>
		<div class='col-lg-4 col-offset-2'>
			<h2>Dispensers</h2>
		</div>
		<div class='col-lg-6'>
			<h2>Actividad</h2>
		</div>
	</div>
	<div class='row'>
		<div class='col-lg-2'>
			<a id='toggle-dispenser-modal' class='btn btn-success'>Nuevo Dispenser</a>
		</div>
		<div class='col-lg-4 col-offset-2'>
			<div id='dispensers-container'>

			</div>
		</div>
		<div class='col-lg-6'>
			<div id='events-container'>

			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="new-dispenser-modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<form action='/dispensers' method='post' class='form-horizontal'>
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title">Nuevo Dispenser</h4>
				</div>
				<div class="modal-body">
					<div class='row'>
						<div class='col-lg-12'>
							<div class="form-group">
				            	<label for='dispenser[uid]' class='col-lg-3 control-label'>Nro. de Serie</label>
				            	<div class='col-lg-9'>
				            		<input type='text' name='dispenser[uid]' class='form-control'>
				            	</div>
				            </div>
							<div class="form-group">
				            	<label for='dispenser[n_bottles]' class='col-lg-3 control-label'>Botellas</label>
				            	<div class='col-lg-2'>
				            		<select name='dispenser[n_bottles]' class='form-control'>
				            			<option value=4>4</option>
				            			<option value=8>8</option>
				            		</select>
				            	</div>
							</div>
						</div>
					</div>
				</div>
				<div class='modal-footer'>
					<a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
          			<button class='btn btn-primary'>Crear</button>
				</div>
			</form>
		</div>
	</div>
</div>
